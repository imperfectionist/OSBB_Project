<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/fb3f090403.js" crossorigin="anonymous"></script>
    <link href="~/Content/bootstrap-flatly.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("OSBB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">

                    @if (User.Identity.IsAuthenticated && User.IsInRole("OSBB_Admin"))
                    {
                        @Html.ActionLink("Квартири", "Index", "Apartment", new { area = "" }, new { @class = "nav-item nav-link" })
                        @Html.ActionLink("Пільги", "Index", "Benefit", new { area = "" }, new { @class = "nav-item nav-link" })
                        @Html.ActionLink("Послуги", "Index", "Utility", new { area = "" }, new { @class = "nav-item nav-link" })
                        @Html.ActionLink("Одиниці виміру", "Index", "Unit", new { area = "" }, new { @class = "nav-item nav-link" })
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("OSBB_User"))
                    {
                        @Html.ActionLink("Особистий кабінет", "Index", "PersonalAccount", new { area = "" }, new { @class = "nav-item nav-link" })
                    }
                </ul>
                <ul class="navbar-nav ml-auto">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p style="text-align:center">&copy; @DateTime.Now.Year - OSBB BerkutPlus</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>

</html>