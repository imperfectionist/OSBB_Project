
@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Вітаємо в ОСББ "Беркут-Плюс"</h2>

@if (User.Identity.IsAuthenticated == false)
{
    <h4 style="text-align:center">Для початку роботи будь-ласка увійдіть або зареєструйтесь</h4>
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/img/01.jpg" alt="1">
        </div>

        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/02.jpg" alt="2">
        </div>

        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/03.jpg" alt="3">
        </div>
    </div>
</div>
